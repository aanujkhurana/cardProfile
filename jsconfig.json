{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"]},
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["frontend/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
